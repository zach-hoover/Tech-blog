<div class="row">
  <div class="col-auto">
    <h2>Hello, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Project:</h3>

    <form class="form new-blog-form">
      <div class="form-group">
        <label for="blog-title">Blog Title:</label>
        <input class="form-input" type="text" id="blog-title" name="blog-title" />
      </div>
      <div class="form-group">
        <label for="blog-post">What are your thoughts</label>
        <input class="form-input" type="number" id="blog-post" name="blog-post" />
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if BlogPost.length}}
  <div class="col-md-6 post-list">
    <h3>Your posts</h3>

    {{#each BlogPost as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/{{post.id}}">{{post.name}}</a></h4>
      </div>
        <div class="col-md-7">
        <p>
            {{post.post}}
        </p>
        </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/dashboard.js"></script>